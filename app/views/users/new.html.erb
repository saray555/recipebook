<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>

      <%= f.label t('.name') %>
      <%= f.text_field :name %>

      <%= f.label t('.email') %>
      <%= f.text_field :email %>

      <%= f.label t('.password') %>
      <%= f.password_field :password %>

      <%= f.label t('.password_confirmation')  %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit t('.create_my_account'), class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>